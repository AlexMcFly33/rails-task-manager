<h1>My Tasks</h1>

<div>
<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task), class: "link" %>
      <% if task.completed %>
        <i class='fa-solid fa-square-check'></i>
      <% else %>
        <i class='fa-regular fa-square'></i>
      <% end %>
      <%= link_to "🗑️", task_path(task), class: "link", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }%>
    </li>
  <% end %>
</ul>
</div>

<%= link_to "CREATE", new_task_path, type: "button", class: "btn btn-warning" %>
